alias ls='ls --color=auto -oAF --no-group --group-directories-first'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color=auto'
alias wflist='iwlist wlp2s0 scan | grep -e "ESSID"'
alias wifi='nmcli device wifi connect Computer\!\!1 password ilikeyourdog'
alias hib='systemctl hibernate'

# alias for handling dotfiles
alias config='/usr/bin/git --git-dir=$HOME/git/.cfg/ --work-tree=$HOME'


# tmux stuff
alias tmux='tmux -2'

# some test stuff
alias normal='printf "\033[38;2;40;40;40m\033[48;2;168;153;132m\033[1m NORMAL \033[m"'

# battery stuff - this might only work with ubuntu
alias battery='upower -i /org/freedesktop/UPower/devices/battery_BAT1 | grep -E "state|to\ full|percentage"'

