# sidebar --------------------------
color sidebar_divider black   color255    # dividing line between sidebar and index
color sidebar_flagged color246   color255    # mailboxes containing flagged mail
color status        color255    color167 ' NeoMutt '
color sidebar_highlight color255 color167    # cursor to select a mailbox
color sidebar_indicator   color255   color167    # the mailbox open in the index panel
color sidebar_new     black color255    # mailboxes continaing new mail
color sidebar_ordinary    color246   color255    #mailboxes that have no new/flagged mail
color sidebar_spoolfile   black   color255    # mailbox that receives incoming mail

