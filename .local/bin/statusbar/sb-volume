#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) amixer -q sset Master toggle ;;
	4) amixer -q sset Master 1%+ ;;
	5) amixer -q sset Master 1%- ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# check if muted
sound="$(amixer get Master | awk '$0-/%/{print $6}' | uniq | tr -d '[]%')"
[ $sound = off ] && echo ðŸ”‡ && exit

vol="$(amixer get Master | awk '$0-/%/{print $5}' | uniq | tr -d '[]%')"
if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol%"
